---
import { Image } from "astro:assets";

export interface Props {
  name: string;
  url: string;
  src: string;
  alt: string;
  loading?: "eager" | "lazy";
}

const { name, url, src, alt, loading } = Astro.props;
---

<a
  class="group flex flex-col items-center bg-ctp-mantle pb-3 transition-colors duration-300 border-transparent hover:border-ctp-lavender border rounded-2xl overflow-hidden drop-shadow-xl"
  href={url}
>
  <div class="overflow-hidden">
    <Image
      class="group-hover:scale-105 transition-transform duration-300"
      src={src}
      alt={alt}
      decoding="async"
      loading={loading}
      width="1625"
      height="1000"
    />
  </div>
  <span class="mt-1">{name}</span>
</a>
